<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Estekhareh.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15" FlowDirection="RightToLeft">
        <Label Text="{Binding AyaDescription}" FontSize="Small" />
        <Label Text="{Binding Text}" FontSize="Medium"/>
        <Label Text="" FontSize="Small" />
        <Label Text="{Binding Description}" FontSize="Medium"/>
    </StackLayout>
    
</ContentPage>